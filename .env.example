APP_NAME=99web
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=pt
APP_FALLBACK_LOCALE=pt
APP_FAKER_LOCALE=pt_PT

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─── Base de dados ────────────────────────────────────────────────────────────
# Dev: SQLite (touch database/database.sqlite)
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=99web
# DB_USERNAME=root
# DB_PASSWORD=

# ─── Sessão / Cache / Queue ───────────────────────────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# ─── Email ────────────────────────────────────────────────────────────────────
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@99web.pt"
MAIL_FROM_NAME="99web"

# Endereço que recebe notificações internas (contactos, pedidos, reuniões)
MAIL_ADMIN_ADDRESS=geral@99web.pt

# ─── Analytics & SEO ─────────────────────────────────────────────────────────
GOOGLE_ANALYTICS_ID=
# GOOGLE_SEARCH_CONSOLE_ID=
# FB_PIXEL_ID=

# ─── AWS (opcional — para S3 ou SES) ─────────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
